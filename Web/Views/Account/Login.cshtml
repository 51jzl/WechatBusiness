
@{
    ViewBag.Title = "Login";
    Layout = null; //设置模板页 位置 为null 没有模板
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="../../Content/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="../../Content/font-awesome-4.7.0/css/font-awesome.css" />
    <link rel="stylesheet" type="text/css" href="../../Content/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="../../Content/loginStyle.css" />
</head>
<body>
    <div class="login-body">
        <div class="login-block">
            <div class="login-head">
                <h3 class="login-title">
                    二维码登陆
                </h3>
                <div id="picture-zone">
                    <i class="fa fa-television fa-4x" aria-hidden="true"></i>
                    <div class="trangle"></div> 
                </div>
            </div>
            <div class="content-zone">
                <div class="erCodeLogin">
                    <div id="loginCode-pic"></div>
                    <p class="text-center"><i class="fa fa-weixin text-wechat" aria-hidden="true"></i>打开<span class="text-wechat">微信</span>"扫一扫"登陆</p>
                </div>
                <div class="inputLogin padding-md">
                    <form class="form-horizontal" id="loginForm" target="hiddenFrame">
                        <div class="form-group no-margins">
                            <div class="input-group m-t-md" id="Email">
                                <div class="input-group-addon border-right-none bg-white"><i class="fa fa-phone-square" aria-hidden="true"></i></div>
                                <input class="form-control inputForm border-left-none" name="Email" placeholder="输入手机号或邮箱" type="text" value="">
                            </div>
                            <p class="text-danger" id="userName_error">请输入合法的用户名！</p>
                        </div>
                        <div class="form-group no-margins">
                            <div class="input-group m-t-md" id="Password">
                                <div class="input-group-addon border-right-none bg-white"><i class="fa fa-lock" aria-hidden="true"></i></div>
                                <input class="form-control inputForm border-left-none"  name="Password" placeholder="输入密码" type="password">
                            </div>
                            <p class="text-danger" id="passWord_error">用户名和密码不匹配！</p>
                        </div>
                        <div class="form-group no-margins">
                            <div class="input-group m-t-md" id="rememberMe">
                                <input name="rememberMe" type="checkbox" value="true">
                                <input name="rememberMe" type="hidden" value="false"><label for="rememberMe">记住我</label>
                            </div>
                        </div>
                        <div class="form-group no-margins">
                            <button id="loginBtn" class="btn btn-desktop-default btn-block inputForm m-t-md bg-blue" return false> 登录</button>
                        </div>
                    </form>
                    <iframe name="hiddenFrame" id="hiddenFrame" style="display:none"></iframe>
                    <p class="requireAgencyInfo m-t-md">还没有申请代理？<a href="">申请代理!</a></p>
                    <div class="noMeanline"></div>
                    <div class="inputLoginFooter m-t-md">
                        <p>
                            其他登陆：
                            <a href=""><i class="fa fa-qq text-orange m-l-xs" aria-hidden="true"></i></a>
                            <a href=""><i class="fa fa-weibo text-orange m-l-xs" aria-hidden="true"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript" src="~/Scripts/login.js"></script>
</html>


