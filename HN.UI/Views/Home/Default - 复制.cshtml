@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>系统管理-主页</title>
    <!--加载css-->
    <link href="~/Content/css/base.css" rel="stylesheet" />
    <link href="~/Content/EasyUI/themes/@ViewBag.skin/easyui.css" rel="stylesheet" />
    <link href="~/Content/css/themes/@ViewBag.skin/main.css" rel="stylesheet" />
    <link href="~/Content/css/default.css" rel="stylesheet" />
    <link href="~/Content/css/icons/icon.css" rel="stylesheet" />
    <!--加载脚本-->
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Content/EasyUI/jquery.easyui.min.js"></script>
    <script src="~/Content/EasyUI/locale/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/Page/Default.js?v=2015102125689"></script>
    <script src="~/Scripts/Page/Common.js?V=2015102125689"></script>
    <script src="~/Scripts/Page/EasyUI-Validate.js"></script>
    <script src="~/Scripts/Page/ShortcutKey.js"></script>
</head>
<body class="easyui-layout" data-options="fit:true" scroll="no">
    <noscript>
        <div class="noscript">
            <img src="~/Content/images/noscript.gif" alt="抱歉，请开启脚本支持！" />
        </div>
    </noscript>
    <div data-options="region:'north'" id="north" class="head-north">
        <div class="head head-right">
            <a href="javascript:void(0)" class="easyui-menubutton" data-options="menu:'#skin',iconCls:'icon-color_swatch'">皮肤:@Html.Raw(ViewBag.skin == "metro-green" ? "Metro-绿" : (ViewBag.skin == "gray" ? "流行灰" : "默认"))</a>
            <div id="skin">
                <div data-options="iconCls:'icon-color_default'" data-key="default">默认</div>
                <div class="menu-sep"></div>
                <div data-options="iconCls:'icon-color_gray'" data-key="gray">流行灰</div>
                <div class="menu-sep"></div>
                <div data-options="iconCls:'icon-color_green'" data-key="metro-green">Metro-绿</div>
            </div>
            <a href="javascript:void(0)" class="easyui-menubutton" data-options="menu:'#user',iconCls:'icon-user'">用户:@ViewBag.UserName</a>
            <div id="user" style="width:150px">
                <div data-options="iconCls:'icon-edit'" id="btnChangePwd">修改密码</div>
                <div class="menu-sep"></div>
                <div data-options="iconCls:'icon-user_go'" id="btnLogout">安全退出</div>
            </div>
        </div>
        <span class="head-left">
            Jquery-EasyUI 管理系统
        </span>
    </div>
    <div data-options="region:'west',split:true,title:'导航菜单'" id="west" style="width:200px;padding:0px">
        <div id="nav"></div>
    </div>
    <div data-options="region:'south'" class="head-south-@ViewBag.skin" style="height:30px;margin-top:5px">
        <div class="footer">Copyright &copy; 2015, All Rights Reserved</div>
    </div>
    <div data-options="region:'center'" id="mainPanle">
        <div id="tabs" class="easyui-tabs" data-options="border:false,fit:true">
            <div title="我的桌面" style="overflow: hidden">
                <div style="margin-left:20px">
                    <h2>您好：欢迎使用！</h2>
                </div>
            </div>
        </div>
    </div>
    <div id="win" class="easyui-window" title="修改密码" style="width:385px;height:200px;padding:10px 10px 5px 10px"
         data-options="iconCls:'icon-edit',modal:true,minimizable:false,maximizable:false,collapsible:false,closed:true,openAnimation:'slide',close:false">
        <div class="easyui-layout" data-options="fit:true">
            <div data-options="region:'center'" style="padding: 6px; font-size: 12px; font-family: Verdana,宋体,Tahoma;">
                <table cellpadding="3">
                    <tr>
                        <td>原密码：</td>
                        <td>
                            <input id="txtOldPass" class="easyui-textbox" type="Password" /><span id="errorMsg0" class="errorMsg"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>新密码：</td>
                        <td>
                            <input id="txtNewPass" class="easyui-textbox" type="Password" /><span id="errorMsg1" class="errorMsg"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>确认密码：</td>
                        <td>
                            <input id="txtRePass" class="easyui-textbox" type="Password" /><span id="errorMsg2" class="errorMsg"></span>
                        </td>
                    </tr>
                </table>
            </div>
            <div data-options="region:'south',border:false" style="text-align: right; height: 30px; line-height: 30px;">
                <a id="btnEp" class="easyui-linkbutton" icon="icon-ok" href="javascript:void(0)">确定</a>
                <a id="btnCancel" class="easyui-linkbutton" icon="icon-cancel" href="javascript:void(0)">取消</a>
            </div>
        </div>
    </div>
    <div id="tabMenu" class="easyui-menu" style="width: 150px;">
        <div id="refresh">刷新</div>
        <div class="menu-sep"></div>
        <div id="close">关闭</div>
        <div id="closeother">关闭其他</div>
        <div id="closeall">全部关闭</div>
        <div class="menu-sep"></div>
        <div id="exit">退出</div>
    </div>
</body>
</html>
