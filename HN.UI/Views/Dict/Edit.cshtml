@using HN.Model
@model DictValueInfo

@{
    ViewBag.Title = "编辑字典";
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}
<div class="easyui-panel" data-options="footer:'#footer',border:false,fit:true">
    <form id="ff" class="easyui-form" action="/Dict/Edit/@Model.ValID" data-options="novalidate:true" method="post">
        @Html.HiddenFor(m => m.ValID)
        @Html.HiddenFor(m => m.KeyID)
        <table class="tfrm">
            <tr><td>关键字:</td><td><input class="easyui-textbox" value="@ViewBag.KeyName" data-options="disabled:true" /><span class="required">*</span></td></tr>
            <tr><td>选项值:</td><td>@Html.TextBoxFor(m => m.ValName, new { @class = "easyui-textbox", data_options = "required:true" })<span class="required">*</span></td></tr>
            <tr><td>显示顺序:</td><td>@Html.TextBoxFor(m => m.Sort, new { @class = "easyui-textbox", data_options = "required:true,validType:'number'", Value = Model.ValID.ToString() == "0" ? "" : Model.Sort.ToString() })<span class="required">*</span></td></tr>
            <tr><td>说明:</td><td>@Html.TextBoxFor(m => m.Remark, new { @class = "easyui-textbox", style = "height:100px", @data_options = "multiline:true" })</td></tr>
        </table>
    </form>
</div>